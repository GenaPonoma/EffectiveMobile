<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
    </style>
    <style name="YourCustomFilledBoxStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CalendarViewStyle" parent="Widget.Material3.MaterialCalendar">
        <item name="materialCalendarHeaderSelection">@color/blue_gray</item>
        <item name="materialCalendarHeaderTitle">@color/blue_gray</item>
        <item name="materialCalendarDayOfWeekLabel">@color/light_sky_blue</item>
        <item name="materialCalendarDay">@color/light_sky_blue</item>


    </style>

    <style name="Custom" parent="Widget.Design.ScrimInsetsFrameLayout">
        <item name="cornerRadius">12dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="elevation">0dp</item>
        <item name="android:shadowRadius">@android:integer/config_longAnimTime</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="CalendarViewStyle3" parent="Widget.Material3.MaterialCalendar">
        <item name="android:headerBackground">@color/blue_gray</item>
        <item name="android:dateTextAppearance">@style/CalendarDateText</item>
        <item name="android:title">@style/CalendarWeekNumberText</item>
    </style>

    <style name="CalendarDateText" parent="">
        <item name="android:textColor">@color/blue_gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CalendarWeekNumberText" parent="ShapeAppearanceOverlay.MaterialComponents.MaterialCalendar.Year">
        <item name="android:textColor">#FFC107</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomButtonUp" parent="Widget.MaterialComponents.TimePicker.ImageButton">
        <item name="cornerRadius">12dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:shadowRadius">@android:integer/config_longAnimTime</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">#3D3D3D</item>
    </style>
    <style name="CustomBottomNavigationStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@drawable/shape_r</item>

        <item name="tickColorActive">@color/color_gray</item>
        <item name="colorOnContainer">@color/color_gray</item>
        <item name="itemIconTint">@color/custom_bottom_navigation_text_color_selector</item>
        <item name="itemTextColor">@color/custom_bottom_navigation_text_color_selector</item>

    </style>
    <style name="ModalBottomSheetDialog" parent="Widget.Material3.BottomSheet.Modal">
        <item name="backgroundTint">@color/color_gray</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">24dp</item>
    </style>

</resources>